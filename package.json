{
  "name": "epicgamewebelectron",
  "productName": "epicgamewebelectron",
  "version": "1.1.2",
  "description": "epic games",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "build": "electron-builder"
  },
  "build": {
    "appId": "electrongameapp",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "electrongameapp uninstaller",
      "license": "license.md",
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": {
    "name": "sillyangel",
    "email": "sillyangel3@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "icons/icon.png"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "epicgamewebelectron",
            "iconUrl": "https://cdn.sillyangel.ml/icon.ico",
            "setupIcon": "icons/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
          },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options" : {
              "maintainer": "Sillyangel",
              "homepage": "https://sillyangel.ml",
              "icon": "icons/icon.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.67",
    "@electron-forge/maker-deb": "^6.0.0-beta.67",
    "@electron-forge/maker-rpm": "^6.0.0-beta.67",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.67",
    "@electron-forge/maker-zip": "^6.0.0-beta.67",
    "electron": "21.1.1"
  }
}
